		        var imageName6 = imageFile6.name;
		        var reader6 = new FileReader();
		        reader6.onload = function(e) {
					reader6.readAsDataURL(imageFile6);
	        	}
		        document.getElementById("classcontent").value = imageName6;
	        }
	        if (imageFile7 != null) {
