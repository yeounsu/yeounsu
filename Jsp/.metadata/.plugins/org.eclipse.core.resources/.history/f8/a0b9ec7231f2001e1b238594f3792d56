	<script>
		function showPanel(panelId, buttonId) {
			var panels = document.querySelectorAll('.panel-containers');
			panels.forEach(function(panel) {
				panel.classList.remove('active');
			});
			
			var buttons = document.querySelectorAll('.button-containers button');
			buttons.forEach(function(button) {
				button.classList.remove('active');
			});
			
			var currentPanel = document.getElementById(panelId);
			currentPanel.classList.add('active');
			
			var currentButton = document.getElementById(buttonId);
			currentButton.classList.add('active');
		}

		
		$(function() {
			$(document).ready(function() {
				$("#btn-add-item").trigger("click");
				$("#btn-add-class").trigger("click");
			});
			
			var icnt = 0, istart = 0, ccnt = 0, cstart = 0;
			
			$("#btn-add-item").on("click", function() {
				var html = "";
				$.ajax({
					url: "getWishItemList.jsp", // AJAX 요청을 처리할 JSP 페이지 경로
					type: "GET",
					success: function(response) {
						var ivlist = JSON.parse(response); // JSON 형식의 데이터 파싱
						for (var i = istart; i <= ivlist.length; i++) {
							if (ivlist.length == i) {
								istart = ivlist.length;
								break;
							}
							
							if (i > istart + 5) {
								istart += 6;
								break;
							}
							
							icnt++;
							var ibean = ivlist[i];
							html += "<div class='col mt-2 mb-2'>";
							html += "<a href='board_view.html?id=" + ibean.itemkey + "' style='text-decoration-line: none;'>";
							html += "<div class='card h-100 ' style='card-border-radius: .75rem;'>";
							html += "<img src='img/img01.jpg' class='card-img-top' alt=''>";
							html += "<div class='card-body p-2 pb-3'>";
							html += "<h5 class='card-title'><small>" + ibean.itemname + "</small></h5>";
							html += "<p class='card-text'><small>" + ibean.membername + "</small></p>";
							html += "</div>";
							html += "<div class='card-footer text-end'>";
							html += "<small class='text-body-secondary'> " + ibean.itemprice + "원</small>";
							html += "</div>";
							html += "</div>";
							html += "</a>";
							html += "</div>";
						}
						$("div#row_item").append(html);
					},
					error: function(xhr, status, error) {
						console.error("Error:", error);
					}
				});
			});
			
			$("#btn-add-class").on("click", function() {
				var htmls = "";
				$.ajax({
					url: "getWishClassList.jsp", // AJAX 요청을 처리할 JSP 페이지 경로
					type: "GET",
					success: function(response) {
						var cvlist = JSON.parse(response); // JSON 형식의 데이터 파싱
						for (var i = cstart; i <= cvlist.length; i++) {
							if (cvlist.length == i) {
								cstart = cvlist.length;
								break;
							}
							
							if (i > cstart + 5) {
								cstart += 6;
								break;
							}
							
							ccnt++;
							var cbean = cvlist[i];
							htmls += "<div class='col mt-2 mb-2'>";
							htmls += "<a href='board_view.html?id=" + cbean.classkey + "' style='text-decoration-line:none;'>";
							htmls += "<div class='card h-100'>";
							htmls += "<img src='img/img01.jpg' class='card-img-top' alt=''>";
							htmls += "<div class='card-body p-2 pb-3'>";
							htmls += "<h5 class='card-title'><small>" + cbean.classname + "</small></h5>";
							htmls += "<p class='card-text'><small>" + cbean.membername + "</small></p>";
							htmls += "</div>";
							htmls += "<div class='card-footer text-end'>";
							htmls += "<small class='text-body-secondary'>" + cbean.classprice + "원</small>";
							htmls += "</div>";
							htmls += "</div>";
							htmls += "</a>";
							htmls += "</div>";
						}
						$("div#row_class").append(htmls);
					},
					error: function(xhr, status, error) {
						console.error("Error:", error);
					}
				});
			});
		});
	</script>
</head>
